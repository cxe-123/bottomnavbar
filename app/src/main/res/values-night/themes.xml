<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--<style name="Theme.WorkLah" parent="Theme.MaterialComponents.Light">-->
    <style name="Theme.WorkLah" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/dark_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.WorkLah.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Theme.WorkLah.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WorkLah.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

